<!DOCTYPE html>
<html lang="pl">

<head>
        <!-- @include './head' -->
        <!-- title -->
        <title>Settings</title>
</head>

<body>
        <!-- @include './sidebar' -->
        <!-- @include './nav' -->
        <main class="contact">
                <h2 class="contact__title">Contact us</h2>
                <hr>
                <form class="contact__form" action="" method="">
                        <div class="contact__form-box">
                                <label for="contact-name">Your name</label>
                                <input type="text" id="contact-name">
                        </div>
                        <div class="contact__form-box">
                                <label for="contact-email">Your email</label>
                                <input type="email" id="contact-email">
                        </div>
                        <div class="contact__form-box">
                                <label for="contact-issue">Topic</label>
                                <select name="" id="contact-issue">
                                        <option value="0" selected disabled>--Please choose a topic--</option>
                                        <option value="issue1">I have an easy problem with my computer</option>
                                        <option value="issue2">I think my problem will be difficult for you</option>
                                        <option value="issue3">I haven't problem, I want to rate you!</option>
                                        <option value="other">I have other issue</option>
                                </select>
                        </div>
                        <div class="contact__form-box">
                                <label for="contact-msg">Your message</label>
                                <textarea name="" id="contact-msg"></textarea>
                        </div>
                        <button class="contact__form-btn" type="submit">Send</button>

                </form>
        </main>

        <!-- JS - MAIN (localstorage & sidebar & nav)-->
        <script src="./dist/js/index.min.js"></script>
</body>

</html>